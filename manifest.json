{
  "name": "Zendesk Ticket Copier",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
      "default_popup": "popup.html",
      "default_title": "Copy Ticket Number"
  },
  "permissions": ["scripting", "activeTab", "clipboardWrite"],
  "host_permissions": ["https://*.zendesk.com/*"],
  "background": {
      "service_worker": "background.js"
  }
}
